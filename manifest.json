{
  "manifest_version": 2,

  "name": "KANOPE",
  "description": "Disable history, switch between no proxy and Tor and blocks some common attacks and more !",
  "version": "1.3",
  "icons": 
  { 
          "128": "128.png" 
  },
  "background": 
  { 
  "scripts": ["background.js","rules.js"]
  },
  "permissions": 
  [
  "tabs", "browsingData","privacy","proxy", "webRequest", "webRequestBlocking", "<all_urls>", "offroad"
  ],
  "browser_action": 
  {
    "default_icon": "icon.png",
    "default_title": "KANOPE"
  }
}
